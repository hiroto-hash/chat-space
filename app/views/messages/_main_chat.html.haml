.main
  .main-header
    .main-header__left-box
      %h2.main-header__leftbox__current-group
        = @group.name
      %ul.main-header__leftbox__member-list
        Menber:
        - @group.users.each do |user|
          %li=user.name
    .main-header__edit-btn
      = link_to  edit_group_path(@group) do
        edit
  .messages
    =render @messages do
      .message__upper-info
        %p.message__upper-info__talker 
        %p.message__upper-info__date
      %p.message__text likelikelike
    
  .form
    .input-box
      = form_for [@group, @message],html:{class:"form_mask"} do |f|
        = f.text_field :content, class: 'text',placeholder: "type a message"
        = f.label :image, class: 'image' do
          =icon('fas', 'image')
          = f.file_field :image, class: 'file'
        = f.submit 'Send', class:'submit-btn'