.side-bar
  .side-header
    .side-header__box
      %p.side-header__box__name 
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box_menu__new-group
          = link_to new_group_path do
            =icon('far','edit', class: 'icon')
        %li.list
          =link_to edit_user_path(current_user) do
            =icon( 'fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), class: 'group' do
        .groups__group
          %p.group__group-name
            = group.name
          %p.group__group-message 
            = group.show_last_message
